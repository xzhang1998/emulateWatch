<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_above="@+id/imageRecView"
           android:layout_marginBottom="259dp"
           app:layout_constraintTop_toTopOf="@id/imageRecView"
           android:background="#E3E3E3" />
       <View
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:layout_alignParentLeft="true"
           app:layout_constraintLeft_toLeftOf="@id/imageRecView"
           android:background="#E3E3E3" />

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/imageRecView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_above="@+id/imageRecView"
           android:layout_marginBottom="259dp"
           app:layout_constraintTop_toBottomOf="@id/imageRecView"
           android:background="#E3E3E3" />

       <View
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:layout_alignParentLeft="true"
           app:layout_constraintLeft_toRightOf="@id/imageRecView"
           android:background="#E3E3E3" />


</androidx.constraintlayout.widget.ConstraintLayout>